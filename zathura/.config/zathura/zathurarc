map R reload

# move around
map e scroll down
map y scroll up
map t scroll full-down
map b scroll full-up

# map [index] e move down
# map [index] y move up

# # zoom
# map <C-i> zoom in
# map <C-o> zoom out

# enable copy to clipboard
set selection-clipboard clipboard

# Open document in fit-width mode by default
set adjust-open 'best-fit'

# One page per row by default
set pages-per-row 1

#stop at page boundries
set scroll-page-aware "true"
# set smooth-scroll "true"
set scroll-full-overlap 0.01
set scroll-step 50

#zoom settings
set zoom-min 10
set guioptions ""

set render-loading "false"
set scroll-step 50


# color configure
include zathura-gruvbox/zathura-gruvbox-dark-soft
