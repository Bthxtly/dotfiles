[keys.viewer]
Shift + question = help
g = first_file
Shift+g = last_file
p = prev_file
n = next_file
Shift+n = next_dir
comma = prev_frame
period = next_frame
c = skip_file
a = animation
Return = mode
h = step_left 10
l = step_right 10
k = step_up 10
j = step_down 10
Shift + H = step_left 1
Shift + L = step_right 1
Shift + K = step_up 1
Shift + J = step_down 1
Equal = zoom +10
Plus = zoom +10
i = zoom +10
Minus = zoom -10
o = zoom -10
w = zoom width
# Shift+i = exec convert "%" -channel RGB -negate - | swayimg -
# Shift+d = exec ~/.local/bin/swayimg-rm "%" && skip_file; reload
# Shift+w = exec ~/.local/bin/setwall "%";
# Shift+y = exec cp "%" ~/tmp;
z = zoom fit
f = zoom fill
0 = zoom real
BackSpace = zoom optimal
Alt+s = scale
r = rotate_left
R = rand_file
Ctrl +r = rotate_right
v = flip_vertical
x = flip_horizontal
Shift + a = antialiasing
Shift + r = reload
m = info
# Escape = exit
q = exit
ScrollRight = step_right 3
ScrollLeft = step_left 3
ScrollDown = step_up 3
ScrollUp = step_down 3
Ctrl+ScrollUp = zoom +5
Ctrl+ScrollDown = zoom -5
Shift+ScrollUp = prev_file
Shift+ScrollDown = next_file
Alt+ScrollUp = prev_frame
Alt+ScrollDown = next_frame

